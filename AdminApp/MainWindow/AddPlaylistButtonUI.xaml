<UserControl x:Class="AdminApp.MainWindow.AddPlaylistButtonUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdminApp.MainWindow"
             mc:Ignorable="d" 
             d:DesignHeight="20" Width="600">
    <Grid x:Name="AddPlaylistButtonGrid" MouseMove="ShowAddPlaylistButtonMouseMove" MouseLeave="HideAddPlaylistButtonMouseMove" Background="AliceBlue">
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="5" Margin="10,8,0,0" Stroke="Black" VerticalAlignment="Top" Width="564" MouseUp="AddPlaylistButtonMouseUp"/>
        <Ellipse HorizontalAlignment="Left" Height="20" Margin="0,0,120,0" Stroke="Black" VerticalAlignment="Top" Width="20" MouseUp="AddPlaylistButtonMouseUp">
            <Ellipse.Fill>
                <ImageBrush/>
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</UserControl>
